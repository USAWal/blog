<div class="col-md-4 col-md-offset-4">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Type your email' %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Type your password #{@validatable ? "(#{@minimum_password_length} characters minimum)": ''}" %>
  </div>
  <br />
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: 'Confirm the password' %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<br />
</div>
