<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to t('home_link'), root_path, class: 'navbar-brand' %>
        </div>
        <div class="collapse navbar-collapse" id="navbar_collapse">
          <%= link_to user_signed_in? ? edit_user_registration_path : new_user_session_path do %>
            <%= button_tag type: 'button', class: 'btn btn-danger navbar-btn' do %>
              <%= user_signed_in? ? 'Edit user' : 'Sign in' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </nav>
    <% if notice %>
      <div class="alert alert-success alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <%= alert %>
      </div>
    <% end %>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>
    </div>

    <div class="footer">
      <div class="container">
        <div class="clearfix">
          <div class="footer-logo">
            <a>
              <%= image_tag 'logo.png' %>
            </a>
          </div>
        </div>
        <div class="footer-copyright text-center">
          <%= t 'copyright' %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
